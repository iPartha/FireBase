<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.example.ipartha.firebase.LoginActivity">


    <TextView
        android:text="Fire Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Welcome back!"
        android:textSize="@dimen/login_info_text_height"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/textView2" />

    <TextView style="@style/login_text"
        android:text="Sign in via facebook or google"
        android:layout_width="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="User Name"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:id="@+id/editUserName" />

    <EditText
        android:layout_width="300dp"
        android:hint="Password"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/editPwd" />

    <TextView style="@style/login_text"
        android:text="Forgot your password?"
        android:onClick="onClickForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPwd"
        android:layout_alignLeft="@+id/editPwd"
        android:layout_alignStart="@+id/editPwd"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6" />

    <TextView style="@style/login_text"
        android:text="Need an account?"
        android:onClick="onClickNeedAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/editPwd"
        android:layout_alignEnd="@+id/editPwd"
        android:id="@+id/textViewNewUser" />

    <Button
        android:text="Sign in"
        android:onClick="onClickSignIn"
        android:textSize="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:id="@+id/button" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/googleplus"
        android:id="@+id/googleplus"
        android:layout_alignTop="@+id/facebook"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:srcCompat="@drawable/facebook"
        android:layout_marginTop="26dp"
        android:id="@+id/facebook"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />


</RelativeLayout>
